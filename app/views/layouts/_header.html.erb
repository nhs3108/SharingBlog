<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <b><%= link_to "SharingBlog", root_path, class: "navbar-brand"  %></b>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "Contact us", contact_path  %></li>
          <li><%= link_to "All members", users_path  %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user.nil? %>
            <li><%= link_to "Log-in", login_path  %></li>
            <li><%= link_to "Sign-up", signup_path  %></li>
          <% else %>
              <li><%= image_tag current_user.picture.url,size: "45x45", alt: "Avatar" %></li>
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><b><%= current_user.name %></b> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Change profile", edit_user_path(current_user)  %></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", logout_path, method: "delete"  %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>