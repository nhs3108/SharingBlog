<%= form_for(@entry) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title, class: "form-control", id: "input_title" %>
</div>
<div class="field">
  <%= f.label :body %><br>
  <%= f.text_area :body, class: "form-control", id: "input_body" %>
</div>
<%= f.hidden_field :user_id %>
<br>
<%= f.submit "Done", class: "btn btn-primary" %>
<% end %>